@model EFCoreCRUD.Models.ViewModels.Usuario

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Usuario</h4>
<hr />
<form asp-action="Editar" method="post">
    @await Html.PartialAsync("_Visualizar")
    <div class="row">
        <div class="col-md-12 text-right">
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalExcluir">Excluir</button>
            <button class="btn btn-primary" type="submit">Salvar</button>
        </div>
    </div>

    <div class="modal fade" id="modalExcluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Excluir</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Deseja realmente excluir?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-primary" formnovalidate formaction="Excluir">Sim</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
